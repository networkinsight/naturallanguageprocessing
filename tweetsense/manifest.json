{

  "manifest_version": 2,
  "name": "TweetSense",
  "version": "1.0",

  "description": "Sentinent analysis and color highlighting of Twitter content.",

  "icons": {
    "32": "res/logo-32.png",
    "48": "res/logo-48.png",
    "96": "res/logo-96.png",
    "128": "res/logo-128.png"    
  },

  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["appearance.js", "tweetsense.js"]
    }
  ],
  
  "browser_action": {
    "default_icon": "res/logo-32.png",
    "default_title": "TweetSense",
    "default_popup": "popup/settings.html"
  }

}
